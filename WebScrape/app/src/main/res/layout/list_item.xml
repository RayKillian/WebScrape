<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="1dp"
    android:background="@drawable/item_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="14dp"
    android:paddingBottom="12dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="10dp">
    
    <LinearLayout
        android:id="@+id/listProduct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/item_background"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingBottom="12dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="MissingConstraints">
        
        <RelativeLayout
            android:layout_width="95dp"
            android:layout_height="115dp"
            android:layout_marginTop="28dp">
            
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_centerInParent="true"
                android:gravity="center"/>
            
            <ProgressBar
                android:id="@+id/imageProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"/>
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/websiteLogo"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/productDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:ellipsize="end"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textSize="14sp"
                android:maxLines="5"
                tools:text="Long placeholder for the  descrption of the product should notLong placeholder for the  descrption of the product should notLong placeholder for the  descrption of the product should not to be too long"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/newPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#000"
                        android:textSize="12sp"
                        tools:text="Rp10000"/>

                    <TextView
                        android:id="@+id/oldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#000"
                        android:textSize="12sp"
                        tools:text="3000"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold|italic"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="-30%"/>

            </RelativeLayout>
            
        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:src="@drawable/save"/>

        </RelativeLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>